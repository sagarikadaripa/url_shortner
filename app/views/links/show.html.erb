<div class="mb-4">
  <%= link_to root_path, class: "bg-indigo-500 hover:bg-indigo-700 text-white text-s font-bold py-2 px-3 rounded" do %>
    <i class="fas fa-arrow-left"></i> Back to all links
  <% end %>
</div>

<h1 class="mb-6 text-xl font-bold"><%= @link.url %></h1>

<div class="mb-4">
  <%= link_to edit_link_path(@link), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" do %>
    <i class="fas fa-edit"></i> Edit
  <% end %>
</div>

<div class="mt-8">
  <%= line_chart @link.views.group_by_day(:created_at, range: 2.weeks.ago.midnight..Time.now).count %>
</div>
